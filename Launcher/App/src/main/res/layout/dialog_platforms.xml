<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp">

    <TextView
        android:id="@+id/textView"
        style="@style/SettingTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Show/Hide Types" />

    <LinearLayout
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <LinearLayout
            android:id="@+id/settings_vr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:background="@drawable/bkg_button"
            android:orientation="vertical">

            <ImageView
                android:layout_width="110dp"
                android:layout_height="90dp"
                android:padding="10dp"
                android:src="@drawable/ic_platform_vr" />

            <TextView
                style="@style/SettingSubtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:text="VR Apps" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/settings_android"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bkg_button"
            android:orientation="vertical">

            <ImageView
                android:layout_width="110dp"
                android:layout_height="90dp"
                android:padding="10dp"
                android:src="@drawable/ic_platform_android" />

            <TextView
                style="@style/SettingSubtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:text="2D Apps" />

        </LinearLayout>

    </LinearLayout>
</LinearLayout>