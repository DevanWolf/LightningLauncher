<?xml version="1.0" encoding="utf-8"?>
<com.threethan.launcher.browser.CursorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/bkg_dialog"
    android:descendantFocusability="blocksDescendants"
    android:focusable="false"
    android:orientation="vertical"
    android:padding="20dp">

    <View
        android:layout_width="300dp"
        android:layout_height="0dp" />

    <TextView
        style="@style/SettingTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/extension_prompt_title" />

    <ListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="-8dp">

    </ListView>

    <TextView
        style="@style/SettingsText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:alpha="0.5"
        android:gravity="center"
        android:text="@string/extension_prompt_hint" />

</com.threethan.launcher.browser.CursorLayout>