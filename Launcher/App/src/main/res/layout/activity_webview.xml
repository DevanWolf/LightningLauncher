<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_meta"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#70000000"
        android:orientation="horizontal"
        android:paddingLeft="7dp"
        android:paddingRight="7dp">

        <ImageButton
            android:id="@+id/back"
            android:layout_width="39dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/bkg_button_web"
            android:src="@drawable/web_back"
            android:visibility="gone"
            tools:visibility="visible" />

        <ImageButton
            android:id="@+id/forward"
            android:layout_width="39dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/bkg_button_web"
            android:src="@drawable/web_forward"
            android:visibility="gone"
            tools:visibility="visible" />

        <ImageButton
            android:id="@+id/refresh"
            android:layout_width="39dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_margin="8dp"
            android:background="@drawable/bkg_button_web"
            android:src="@drawable/web_refresh" />

        <TextView
            android:id="@+id/urlPre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:alpha="0.7"
            android:singleLine="true"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            tools:text="www." />

        <TextView
            android:id="@+id/urlMid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:singleLine="true"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            tools:text="url" />

        <TextView
            android:id="@+id/urlEnd"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:alpha="0.7"
            android:singleLine="true"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            tools:text=".com/app" />

        <ImageButton
            android:id="@+id/forward2"
            android:layout_width="39dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_weight="1"
            android:background="@drawable/bkg_button_web"
            android:src="@drawable/web_forward"
            android:visibility="gone"
            tools:visibility="visible" />

        <ImageButton
            android:id="@+id/exit"
            android:layout_width="39dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_margin="8dp"
            android:background="@drawable/bkg_button_web"
            android:src="@drawable/web_close" />

    </LinearLayout>

</LinearLayout>